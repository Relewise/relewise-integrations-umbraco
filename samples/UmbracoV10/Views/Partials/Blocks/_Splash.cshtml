@model IPublishedContent
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;

@{
    string splashImage = Model.GetCropUrl("splashImage", "On Page");
    
    bool hasSplashImage = splashImage != null;
}

<div class="m-b-15 m-t-15">
    <h1>@(Model.Value<string>("headline"))</h1>

    <div class="m-t-15 m-b-15">
        @Html.Raw(Model.Value<string>("splashText"))
    </div>

    @if (hasSplashImage)
    {
        <img src="@splashImage" style="max-width: 100%" />
    }
</div>